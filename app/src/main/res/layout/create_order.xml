<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".CreateOrder">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        >

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="200dp"
            android:layout_height="120dp"
            android:layout_marginTop="30dp"
            app:srcCompat="@drawable/step_1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="200dp"
            android:layout_height="50dp"
            app:srcCompat="@drawable/add_child" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="120dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/child_name"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/childName"
            android:layout_width="350dp"
            android:gravity="center"
            android:layout_height="50dp"
            android:background="@drawable/bord_age"
            android:inputType="textPersonName"

            />
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="90dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/age"
            android:layout_marginTop="20dp"
            />

        <EditText
            android:id="@+id/childAge"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/bord_age"
            android:inputType="number"

            />


        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            app:srcCompat="@drawable/gender"
            android:layout_marginStart="10dp"
            />

            <RadioGroup
            android:id="@+id/gender"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
                android:gravity="center"

                >

            <RadioButton
                android:id="@+id/boyBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/prompt_boy"
                android:textColor="@color/cyan"
                android:layout_marginStart="70dp"

                />

            <RadioButton
                android:id="@+id/girlBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="@string/prompt_girl"
                android:textColor="@color/pink"
                />
        </RadioGroup>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="80dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/notes"
            android:gravity="center"
            />


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/childNotes"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:background="@drawable/bord_not"
                android:gravity="center" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/nextBtn"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="60dp"
            android:background="@drawable/next" />

    </LinearLayout>


</ScrollView>