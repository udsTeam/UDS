<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChildSchedule"
    android:scrollbars="vertical"
    android:background="@drawable/bg"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        >

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/step_3"
        android:layout_gravity="center"
        />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/add_schedule" />


        <ImageView
            android:id="@+id/imageView4"
            android:layout_marginTop="10dp"
            android:layout_width="90dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/day"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:id="@+id/dayEditText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/bord_age"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="90dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/date"
            android:layout_marginStart="10dp"
            />

        <EditText
            android:id="@+id/dateEditText"
            android:layout_width="250dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:background="@drawable/bord_age"
            android:inputType="date"
            android:layout_gravity="center"
            />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="90dp"
            android:layout_height="15dp"
            app:srcCompat="@drawable/for_hours"
            android:layout_marginStart="10dp"
            />

    <Spinner
        android:id="@+id/timeSpinner"
        android:layout_width="250dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:entries="@array/hours"
        android:spinnerMode="dropdown" />


    <Button
        android:id="@+id/add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_schedule"
        android:layout_gravity="center"
        />

    <ListView
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:id="@+id/Schedule_list"
        />

    <Button
        android:id="@+id/finish_btn"
        android:layout_width="95dp"
        android:layout_height="30dp"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:background="@drawable/finish"
        android:layout_gravity="bottom|end"
        />
    </LinearLayout>
</ScrollView>