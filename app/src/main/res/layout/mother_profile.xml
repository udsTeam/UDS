<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotherProfile"
    android:background="@drawable/bg"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"

        >

        <ImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="50dp"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/logo_2"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/motherNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/prompt_motherName"
            android:fontFamily="@font/stc_bold"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/motherNameText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/stc_regular"
            android:textSize="18sp"
            android:background="@drawable/bord_age"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/emailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/stc_bold"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            android:text="@string/Email"

            />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/stc_regular"
            android:textSize="18sp"
            android:background="@drawable/bord_age"
            android:layout_gravity="center"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/phoneView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/stc_bold"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            android:text="@string/prompt_phoneNum"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/phoneNumberText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/stc_regular"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bord_age"
            android:inputType="phone"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/Save_btn"
            android:layout_marginTop="30dp"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/save_changes"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:background="@drawable/cancel"
            style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
            android:layout_gravity="center"
            />
    </LinearLayout>

</RelativeLayout>