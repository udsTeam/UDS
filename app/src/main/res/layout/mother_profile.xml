<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MotherProfile"
    android:background="@drawable/bg"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"


        >


        <ImageView
            android:id="@+id/profile_image"
            android:layout_marginTop="40dp"
            android:layout_width="180dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/logo_2"
            android:layout_gravity="center"

            />

        <TextView
            android:id="@+id/motherNameView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:text="@string/prompt_motherName"
            android:fontFamily="@font/stc_bold"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            />

        <EditText
            android:id="@+id/motherNameText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/stc_regular"
            android:textSize="18sp"
            android:background="@drawable/bord_age"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/emailView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/stc_bold"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            android:text="@string/Email"

            />

        <EditText
            android:id="@+id/emailText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/stc_regular"
            android:textSize="18sp"
            android:background="@drawable/bord_age"
            android:layout_gravity="center"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/phoneView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/stc_bold"
            android:textColor="@color/light_blue"
            android:textSize="20sp"
            android:text="@string/prompt_phoneNum"
            android:layout_gravity="center"
            />
        <EditText
            android:id="@+id/phoneNumberText"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:fontFamily="@font/stc_regular"
            android:textSize="18sp"
            android:gravity="center"
            android:background="@drawable/bord_age"
            android:inputType="phone"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/Save_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:text="@string/save"
            android:textColor = "#fff"
            android:textSize="18sp"
            android:fontFamily="@font/stc_regular"
            android:background="@drawable/yellow_btn"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="@string/cancel"
            android:textColor = "#fff"
            android:textSize="22sp"
            android:fontFamily="@font/stc_regular"
            android:background="@drawable/yellow_btn"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/previous_btn"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:layout_gravity="start|bottom"
            android:layout_marginStart="20dp"
            android:layout_marginTop="80dp"
            android:textSize="18sp"
            android:textColor="#fff"
            android:background="@drawable/gray_btn"
            android:text="my orders"
            android:fontFamily="@font/stc_regular"
            />



    </LinearLayout>

</ScrollView>