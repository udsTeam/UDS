<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgwithlogo"
    tools:context=".BabysitterHome"
    >


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:srcCompat="@drawable/conver"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        />

    <TextView
        android:id="@+id/hello_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_View"
        android:layout_marginTop="150dp"
        android:layout_marginStart="100dp"
        android:fontFamily="@font/stc_bold"
        android:textSize="30sp"
        android:textColor="@color/light_blue"

        />

    <TextView
        android:id="@+id/name_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="155dp"
        android:layout_marginStart="180dp"
        android:fontFamily="@font/stc_regular"
        android:textSize="25sp"
        android:textColor="@color/light_blue"

        />
    <TextView
        android:id="@+id/orderStatusView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="185dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="no order"
        android:fontFamily="@font/stc_bold"
        android:textColor="@color/pink"

        />

    <Button
        android:id="@+id/chat_btn"
        android:layout_width="95dp"
        android:layout_height="90dp"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:background="@drawable/small_conver"
        android:layout_margin="20dp"

        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        >

        <Button
            android:id="@+id/viewOrder_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp"
            android:background="@drawable/yellow_btn"
            android:text="view orders"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="@font/stc_regular"
            />

        <Button
            android:id="@+id/dailyReports_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="460dp"
            android:background="@drawable/yellow_btn"
            android:text="report"
            android:textColor="#fff"
            android:textSize="20sp"
            android:fontFamily="@font/stc_regular" />

        <Button
            android:id="@+id/payment_btn"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginTop="510dp"
            android:layout_centerHorizontal="true"
            android:background="@drawable/yellow_btn"
            android:text="work schedule"
            android:textColor="#fff"
            android:textSize="18sp"
            android:fontFamily="@font/stc_regular"/>


    </RelativeLayout>

    <Button
        android:id="@+id/logOut_btn"
        style="@style/Widget.AppCompat.Button.ButtonBar.AlertDialog"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="680dp"
        android:layout_alignParentEnd="true"
        android:background="@drawable/pink_btn"
        android:text="@string/title_logOut"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="@font/stc_regular"
        />

    <Button
        android:id="@+id/profile_btn"
        android:layout_width="90dp"
        android:layout_height="30dp"
        android:layout_marginTop="680dp"
        android:layout_alignParentStart="true"
        android:background="@drawable/gray_btn"
        android:text="@string/title_profile"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="@font/stc_regular"
        />


</RelativeLayout>

